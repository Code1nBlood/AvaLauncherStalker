<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:AvaLauncherStalker"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaLauncherStalker.MainWindow"
        x:DataType="model:MainWindow"
        Title="AvaLauncherStalker v1.0">
  
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />        
      <ColumnDefinition Width="280" />       
    </Grid.ColumnDefinitions>
    
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" /> 
      <RowDefinition Height="*" />            
    </Grid.RowDefinitions>
          
    <Border Grid.Column="0" Grid.ColumnSpan="2" Background="DarkSlateGray" Padding="10">
      <TextBlock Text="STALKER LAUNCHER BY IVAN" 
                 FontSize="24" 
                 Foreground="White"
                 HorizontalAlignment="Center" />
    </Border>
          
    <Grid Grid.Column="0" Grid.Row="1">
      <Image Source="images/OIP.jpg"
             Stretch="UniformToFill"
             IsHitTestVisible="False"/>
          <ScrollViewer>
            <ItemsControl ItemsSource="{Binding NewsList}">
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <Border BorderThickness="3" Background="#80FFFFFF" BorderBrush="Gray" Margin="5" Padding="10">
                    <StackPanel>
                      <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16" />
                      <TextBlock Text="{Binding Content}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                    </StackPanel>
                  </Border>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </ScrollViewer>
    </Grid>
    
    <Border Grid.Column="1" Grid.Row="1" Background="#2B2B2B" Padding="10">
      <StackPanel>
        <Image Source="images/4945652.png" 
               Width="50" Height="50" 
               HorizontalAlignment="Center" 
               Margin="5"/>
        <Button Name="LaunchButton" Content="Запуск" Margin="0,20,0,10"/>
        <TextBlock Text="Выберите DX рендер:" Foreground="White" Margin="0,10,0,5"/>
        <ComboBox Name="RenderComboBox" HorizontalAlignment="Stretch"/>
        <TextBlock Text="Выберите разрешение карты теней:" Foreground="White" Margin="0,10,0,5"/>
        <ComboBox Name="ShadowMapComboBox" HorizontalAlignment="Stretch"/>
        <CheckBox Name="DevCheckBox" Content="Включить режим Отладки" Foreground="White" Margin="0,10,0,5"></CheckBox>
        <CheckBox Name="AvxCheckBox" Content="Поддержка AVX" Foreground="White" Margin="0,10,0,5"></CheckBox>
        <CheckBox Name="ClearCacheCheckBox" Content="Очиситить Кэш Шейдера" Foreground="White" Margin="0,10,0,5"></CheckBox>
      </StackPanel>
    </Border>
  </Grid>
        
</Window>
